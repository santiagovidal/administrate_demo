<%= form_for :product, url: products_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.submit "Save product", :class => "btn btn-default" %>
  </p>
<% end %>

<%= link_to "Go to index", products_path %>
