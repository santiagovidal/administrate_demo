<h1> List of products: </h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>User</th>
    <th></th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td>
        <%= product.name %>
      </td>
      <td>
        <%= product.description %>
      </td>
      <td>
        <%= product.user.email %>
      </td>
      <td>
        <%= link_to "View", product %>
      </td>
    </tr>
  <% end %>
</table>


<%= link_to "New product", new_product_path, :class => "btn btn-default" %>
